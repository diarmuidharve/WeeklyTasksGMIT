#Reference: https://medium.com/future-vision/plotting-equations-in-python-d0edd9f088c8
import matplotlib.pyplot as plt
import numpy as np
#Import necessary libraries

x = np.array(range(0,5)) # range isnt inclusive of ending value
y = x ** 2 #Define Y axis values 

plt.plot(x, y, label='y = x ** 2') #Plot X and Y axis values
plt.title('Weekly Tasks 08') #Plot the title for our graph

plt.xlabel('x') #Define X axis label 
plt.ylabel('y') #Define Y axis label 

plt.xlim(0, 5 ) #Define boundry for X axis
plt.ylim(0, 16) #Define boundry for Y axis

plt.grid(alpha=.4,linestyle='--') #Styling the plot

plt.legend() #Add legend 

plt.show() #Actualy display the graph
